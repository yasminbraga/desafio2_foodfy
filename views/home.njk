{% extends "layout.njk" %}

{% block content %}
    <div class="description-container">
        <div class="description">
            <h1>As melhores receitas</h1>
            <p>Aprenda a construir os melhores pratos
                com receitas criadas por profissionais
                do mundo inteiro.</p>
        </div>
        <img src="/assets/chef.png" alt="">
    </div>
    
    <div class="section-title">
        <p>Mais acessadas</p>
    </div>
    <section class="cards">
    {% for recipe in recipes %}
        <div class="card" id={{recipes.indexOf(recipe)}}>
            <div class="card-image-container">
                <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.image }}">
            </div>
            <div class="content">
                <p class="content-title">{{recipe.title}}</p>
                <p class="content-author">{{recipe.author}}</p>
            </div>
        </div>
    {% endfor %}
    </section>
{% endblock %}